{
    "_comment": "Full config example. For Bootstrap mode, only bootstrap + server sections needed.",
    "server": {
        "listen": ":24368",
        "readTimeout": 30,
        "writeTimeout": 30,
        "idleTimeout": 120
    },
    "node": {
        "_comment": "Dynamic: fetched from CP in Bootstrap mode",
        "name": "example-node",
        "id": 0,
        "region": "",
        "location": "",
        "provider": ""
    },
    "controlPlane": {
        "url": "https://api.moenet.work",
        "token": "your-agent-token-here",
        "requestTimeout": 15,
        "heartbeatInterval": 30,
        "syncInterval": 60,
        "metricInterval": 60,
        "maxRetries": 3,
        "retryInitialDelay": 1000
    },
    "bird": {
        "controlSocket": "/var/run/bird/run/bird.ctl",
        "poolSize": 5,
        "poolSizeMax": 64,
        "peerConfDir": "/etc/bird/peers",
        "ebgpConfTemplateFile": "/opt/moenet-agent/templates/ebgp.conf.tmpl",
        "ibgpConfDir": "/etc/bird/ibgp.d"
    },
    "wireguard": {
        "privateKeyPath": "/etc/wireguard/private.key",
        "publicKeyPath": "/etc/wireguard/public.key",
        "configDir": "/etc/wireguard",
        "persistentKeepaliveInterval": 25,
        "_comment": "Dynamic: dn42Ipv4/Ipv6 fetched from CP routers table",
        "dn42Ipv4": "",
        "dn42Ipv6": "",
        "dn42Ipv6LinkLocal": "fe80::1"
    },
    "metric": {
        "pingTimeout": 5,
        "pingCount": 4,
        "pingWorkers": 32
    },
    "autoUpdate": {
        "enabled": true,
        "checkInterval": 60,
        "channel": "stable",
        "_comment_channel": "Options: stable, beta, dev",
        "githubRepo": "heichaowo/moenet-agent"
    }
}